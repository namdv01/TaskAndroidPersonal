<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#9C27B0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <EditText
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Nhập tên thành phố"
                android:id="@+id/formEdit"/>

            <Button
                android:backgroundTint="#fa1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:text="Tìm"
                android:id="@+id/btnSearch"/>
        </LinearLayout>
        <TextView
            android:textColor="#AAFFE4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thành phố "
            android:id="@+id/textNameCity"
            android:textSize="24dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iconWeather"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhiệt độ"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#f20"/>
        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#1E4C9C"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="12">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/rainny"/>
                <TextView
                    android:id="@+id/textRainny"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Độ ẩm"
                    android:textSize="24dp"
                    android:textColor="#00BCD4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/wind"/>
                <TextView
                    android:id="@+id/textWind"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Mây"
                    android:textSize="24dp"
                    android:textColor="#00BCD4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/cloud"/>
                <TextView
                    android:id="@+id/textCloud"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Gió"
                    android:textSize="24dp"
                    android:textColor="#00BCD4"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textDay"
            android:textColor="#fa2"
            android:layout_marginTop="8dp"
            android:textSize="24dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày cập nhật"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnNextDay"
            android:text="Các ngày tiếp theo"
            android:layout_margin="20dp"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>